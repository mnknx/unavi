{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@wasm/*": ["../result/pkg/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/**/*.json",
    "../result/pkg/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".turbo"]
}
